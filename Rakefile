# encoding: utf-8

require 'rubygems'
require 'rake'
require 'jeweler'

Jeweler::Tasks.new do |gem|
  gem.name = "twinger"
  gem.homepage = "http://github.com/jamtur01/twinger"
  gem.license = "Apache 2"
  gem.summary = %Q{Mock finger from Twitter}
  gem.description = %Q{Tiny app that recreates the experience of finger with Twitter}
  gem.email = "james@lovedthanlost.net"
  gem.authors = ["James Turnbull"]
  gem.bindir = 'bin'
  gem.default_executable = 'twinger'
  gem.executables = [ 'twinger' ]
  gem.files = Dir['lib/**/*.rb'] + Dir['bin/*']
  gem.add_dependency('json')
end
Jeweler::RubygemsDotOrgTasks.new
